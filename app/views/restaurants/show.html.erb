<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<h2><%= @restaurant.name %></h2>
<h5><%= @restaurant.category %></h5>
<p>address: <%= @restaurant.address %></p>
<p>phone number: <%= @restaurant.phone_number %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <span> <%= "★" * review.rating + "☆" * (5-review.rating) %></span>
      <span><%= review.content[0..60] %></span>
    </li>
  <% end %>
</ul>

 <!-- <%= link_to "Add a new review", new_restaurant_review_path(@restaurant)  %> -->

<div class="review_in_show my-5">
  <h5>Add a new review!</h5>
  <%= render 'form_review' %>
</div>
